@model SerhatPoturCV.Models.Entity.Abouts
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Serhat Potur CV | Admin Girişi</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/themes/login/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link href="~/themes/login/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <!-- Main css -->
    <link rel="stylesheet" href="~/themes/login/css/style.css">
</head>
<body>

    <div class="main" style="max-height:650px; width:auto;">

        <!-- Sign up form -->
        <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container">
                <div class="signin-content" style="padding-top:0px;">
                    <div class="signin-image">
                        <img src="~/themes/login/images/9.jpg" style="margin-bottom:10px;" alt="sing up image">
                        <a href="/Home/Index/" class="signup-image-link"> Siteye Dön</a>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title" style="margin:0;">Giriş Yap</h2>
                        <span class="text-danger" style="font-size:16px; font-weight:bold;"> @ViewBag.errorMessage</span>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "register-form" }))
                        {
                            <div class="form-group">
                                @Html.Label(" ", new { @class = "zmdi zmdi-account material-icons-name" })
                                @Html.TextBoxFor(m=>m.Mail,new { @placeholder = "Mail Giriniz" })
                            </div>
                            <div class="form-group">
                                @Html.Label(" ", new { @class = "zmdi zmdi-lock" })
                                @Html.TextBoxFor(m => m.Password, new { @placeholder = "Şifre Giriniz",@type="password" })
                            
                            </div>
                            <div class="form-group">
                                <input type="submit" name="signin" id="signin" class="btn btn-primary btn-block" style="margin:0; " value="Log in" />
                            </div>
                        }
                        <form method="POST" class="register-form" id="login-form">

                            @*<div class="form-group form-button">

                                </div>*@
                        </form>

                    </div>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="~/themes/login/vendor/jquery/jquery.min.js"></script>
    <script src="~/themes/login/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
