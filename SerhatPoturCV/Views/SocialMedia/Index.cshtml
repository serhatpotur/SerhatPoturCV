@using SerhatPoturCV.Models.Entity
@model List<SocialMedias>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card w-100">
    <div class="card-header">
        <h3 class="card-title font-weight-bold ">Yeteneklerim</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus fa-2x"></i>
            </button>
            @Html.Action("AddMediaPartial")


            @*<a href="/Skill/AddSkillPartial" >
                    <i class="fa fa-plus-circle fa-2x"></i>
                </a>*@

        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-bordered projects">
            <thead>
                <tr>
                    <th class="w-25 text-center">
                        Medya Adı
                    </th>

                    <th class="w-25 text-center">
                        Medya Link
                    </th>
                    <th class="w-25 text-center">
                        Icon Class Adı
                    </th>

                    <th class="w-25 text-center">
                        İşlemler
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>

                        <th class="text-center">
                            @item.MediaName
                        </th>

                        <td class=" text-center">
                            @item.MediaLink
                        </td>
                        <td class=" text-center">
                            @item.MediaClass
                        </td>

                        <td class="project-actions text-center ">


                            <a href="/SocialMedia/UpdateSocialMedia/@item.MediaID" class="btn btn-info btn-sm">
                                <i class="fas fa-pencil-alt">
                                </i>
                            </a>
                            <a class="btn btn-danger btn-sm" onclick = "return confirm('Silmek İstediğinize Emin Misiniz ?')" href="/SocialMedia/DeleteSocialMedia/@item.MediaID">
                                <i class="fas fa-trash">
                                </i>

                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>