@model SerhatPoturCV.Models.Entity.Abouts
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>



    <div class="card w-100 mt-1">

        <div class="card-body">
            <div class="tab-content">
                <!-- /.tab-pane -->
                @*<div class="card-body box-profile">*@
                @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    <div class="float-left col-md-4">
                        <div class="text-center">
                            @*img-fluid img-thumbnail img-circle w-25*@
                            @*~/Image/@Model.Image*@
                            <img id="resim" class=" profile-user-img img-fluid img-circle  "
                                 src="@Model.Image"
                                 alt="User profile picture">
                        </div>
                        <div class="text-center mb-2">
                            @*<input type="file" name="file" style="display:normal " class="fas fa-camera fa-2x" />*@
                            <input style="display:none;" name="file" id="dosya" type="file" ClientIDMode="Static" onchange="$('#resim')[0].src = window.URL.createObjectURL(this.files[0])" CssClass="form-control" runat="server" />
                            <label for="dosya"><i class="fas fa-camera fa-2x"></i></label>

                            @*<i class="fas fa-camera fa-2x"></i>*@
                        </div>
                    </div>


                    <div class="float-right col-md-8">

                        @Html.HiddenFor(x => x.AboutID)

                        <div class="form-group row">
                            @Html.Label("Adı", new { @class = "col-sm-2 col-form-label" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Soyadı", new { @class = "col-sm-2 col-form-label" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Şifre", new { @class = "col-sm-2 col-form-label" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.Label("Telefon No", new { @class = "col-sm-2 col-form-label" })
                            @*<label for="inputName" class="col-sm-2 col-form-label">Name</label>*@
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                @*<input type="email" class="form-control" id="inputName" placeholder="Name">*@
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Doğum Tarihi", new { @class = "col-sm-2 col-form-label" })
                            @*<label for="inputName" class="col-sm-2 col-form-label">Name</label>*@
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Dateofbirth, new { @class = "form-control" })
                                @*<input type="email" class="form-control" id="inputName" placeholder="Name">*@
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("mail", new { @class = "col-sm-2 col-form-label" })
                            @*<label for="inputName" class="col-sm-2 col-form-label">Name</label>*@
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                                @*<input type="email" class="form-control" id="inputName" placeholder="Name">*@
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Meslek", new { @class = "col-sm-2 col-form-label" })
                            @*<label for="inputName" class="col-sm-2 col-form-label">Name</label>*@
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Job, new { @class = "form-control" })
                                @*<input type="email" class="form-control" id="inputName" placeholder="Name">*@
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Açıklama", new { @class = "col-sm-2 col-form-label" })
                            @*<label for="inputName" class="col-sm-2 col-form-label">Name</label>*@
                            <div class="col-sm-10">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                                @*<input type="email" class="form-control" id="inputName" placeholder="Name">*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">  <a href="/About/AboutMe/" class="btn btn-danger btn-block">Vazgeç</a></div>
                            <div class="col-sm-6"><button type="submit" class="btn btn-primary btn-block">Oluştur</button></div>



                        </div>
                    </div>
                }

            </div>
            <!-- /.tab-pane -->
            @*</div>*@
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
    </div>