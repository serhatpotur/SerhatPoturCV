@using SerhatPoturCV.Models.Entity
@model List<Abouts>
@{
    ViewBag.Title = "AboutMe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card w-100 m-3">
    <div class="card-header">
        <h3 class="card-title font-weight-bold ">Yeteneklerim</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus fa-2x"></i>
            </button>



            <a href="/About/AddAbout/">
                <i class="fa fa-plus-circle fa-2x"></i>
            </a>

        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-bordered projects">
            <thead>
                <tr>
                    <th class="w-25 text-center">
                        Resim
                    </th>

                    <th class="w-25 text-center">
                        Ad Soyad
                    </th>
                    <th class="w-25 text-center">
                        Mail
                    </th>

                    <th class="w-25 text-center">
                        İşlemler
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>

                        <td class="text-center">
                           <img class=" w-25 img-fluid " src="@item.Image" /> 
                        </td>

                        <td class="text-center">
                            @item.Name @item.Surname
                        </td>

                        <td class="text-center">
                            @item.Mail
                        </td>

                        <td class="project-actions text-center ">


                            <a href="/About/UpdateAbout/@item.AboutID" class="btn btn-info btn-sm">
                                <i class="fas fa-pencil-alt">
                                </i>
                            </a>
                            <a class="btn btn-danger btn-sm" href="/About/DeleteAbout/@item.AboutID">
                                <i class="fas fa-trash">
                                </i>

                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>





