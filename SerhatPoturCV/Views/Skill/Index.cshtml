@using SerhatPoturCV.Models.Entity
@model List<Skills>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <a href="/Skill/AddSkill/" class="btn btn-success">Yeni Giriş</a>

    <div class="container mb-3">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>SkillName</th>
                    <th>SkillValue</th>

                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SkillName</td>
                        <td>@item.SkillValue</td>

                        <td>
                            <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">Sil</a>
                            <a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-warning">Güncelle</a>



                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>
