@using SerhatPoturCV.Models.Entity
@model List<Careers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="card w-100 m-3">
        <div class="card-header">
            <h3 class="card-title font-weight-bold ">Çalışma Geçmişi</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus fa-2x"></i>
                </button>



                <a href="/Career/AddCareer/">
                    <i class="fa fa-plus-circle fa-2x"></i>
                </a>

            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-bordered projects">
                <thead>
                    <tr>
                        <th class="w-25 text-center">
                            Firma Adı
                        </th>

                        <th class="w-25 text-center">
                           Çalışma Aralığı
                        </th>
                        <th class="w-25 text-center">
                            Pozisyon
                        </th>

                        <th class="w-25 text-center">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>

                            <th class="text-center">
                               @item.CompanyName
                            </th>

                            <td class="text-center">
                                @item.StartTime - @item.EndTime
                            </td>

                            <td class="text-center">
                                @item.Position
                            </td>

                            <td class="project-actions text-center ">


                                <a href="/Career/UpdateCareer/@item.CareerID" class="btn btn-info btn-sm">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Career/DeleteCareer/@item.CareerID">
                                    <i class="fas fa-trash">
                                    </i>

                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

