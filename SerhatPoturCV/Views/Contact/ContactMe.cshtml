@model SerhatPoturCV.Models.Entity.Contacts
<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>İletişim</h2>
            @*<p>İletişim</p>*@
        </div>

        <div class="row mt-2">


            <div class="col-md-6 mt-4 d-flex align-items-stretch">
                <div class="info-box">
                    <i class="bx bx-share-alt"></i>
                    <h3>Sosyal Medya</h3>
                    <div class="social-links">
                        @Html.Action("MySocialMedia", "SocialMedia")
                       
                    </div>
                </div>
            </div>

            <div class="col-md-6 mt-4 d-flex align-items-stretch">
                <div class="info-box">
                    <i class="bx bx-envelope"></i>
                    <h3>Email </h3>
                    <p> @ViewBag.mail</p>
                </div>
            </div>
            @*<div class="col-md-6 mt-4 d-flex align-items-stretch">
                <div class="info-box">
                    <i class="bx bx-phone-call"></i>
                    <h3>Call Me</h3>
                    <p>+1 5589 55488 55</p>
                </div>
            </div>*@
        </div>
        @*php-email-form*@
        @using (Html.BeginForm("AddContact", "Contact", FormMethod.Post, new { @class = " contact-from mt-4" }))
        {
            <div class="form-row">
                <div class="col-md-6 form-group">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name" })
                    @*<input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />*@
                    <div class="validate"></div>
                </div>
                <div class="col-md-6 form-group">
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Your Surname" })
                    @*  <input type="text" name="surname" class="form-control" id="surname" placeholder="Your Surname" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />*@
                    <div class="validate"></div>
                </div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Mail, new { @class = "form-control", placeholder = "Your Mail" })

                @*<input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />*@
                <div class="validate"></div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Your Subject" })

                @*<input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />*@
                <div class="validate"></div>
            </div>
            <div class="form-group">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your Message",rows=5 })

                @*  <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>*@
                <div class="validate"></div>
            </div>
          
           
            <div class="text-center"><button type="submit">Mesaj Gönder</button></div>
        }

       
    </div>
</section>
