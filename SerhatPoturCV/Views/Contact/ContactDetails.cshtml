@model SerhatPoturCV.Models.Entity.Contacts
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var messageDate = Convert.ToDateTime(Model.MessageDate).ToShortDateString();
}


<div class="col-md-12 mt-1">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">EMail Oku</h3>

            <div class="card-tools">
                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="mailbox-read-info">
                <h5>@Model.Subject</h5>
                <h6>
                    Kimden: @Model.Name @Model.Surname - @Model.Mail
                    <span class="mailbox-read-time float-right">@messageDate</span>
                </h6>
            </div>
            <!-- /.mailbox-read-info -->
            <div class="mailbox-controls with-border text-center">
                <div class="btn-group">
                    <a href="/Contact/Index/" type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Reply">
                        <i class="fas fa-reply"></i>
                    </a>
                    <a href="/Contact/DeleteContact/@Model.ContactID" type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                        <i class="far fa-trash-alt"></i>
                    </a>

                </div>
            </div>
            <!-- /.mailbox-controls -->
            <div class="mailbox-read-message">
                <p>
                    @Model.Message
                </p>
            </div>
            <!-- /.mailbox-read-message -->
        </div>
        <!-- /.card-body -->
        <!-- /.card-footer -->
        <div class="card-footer">
            <div class="float-right">
                <a href="/Contact/Index/" type="button" class="btn btn-default"><i class="fas fa-reply"></i> Geri Dön</a>
                <a href="/Contact/DeleteContact/@Model.ContactID" type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Sil</a>

            </div>

        </div>
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->
</div>