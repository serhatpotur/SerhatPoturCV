@using SerhatPoturCV.Models.Entity
@model List<Contacts>
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <div class="container mb-3">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Subject</th>

                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.Subject</td>

                        <td>
                            <a href="/Contact/ContactDetails/@item.ContactID" class="btn btn-success">Details</a>
                            <a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a>
                            <a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-warning">Güncelle</a>



                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>
