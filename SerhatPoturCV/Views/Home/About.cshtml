@using SerhatPoturCV.Models.Entity
@model List<Abouts>
<section id="about" class="about">

    <!-- ======= About Me ======= -->
    <div class="about-me container">

        <div class="section-title">
            <h2>Hakkımda</h2>
            @*<p>Hakkımda</p>*@
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4" data-aos="fade-right">
                    <img src="~/themes/Personal/assets/img/3.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                    <h3>@item.Job</h3>
                    @*<p class="font-italic">
                       @item.Description1
                    </p>*@
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="icofont-rounded-right"></i> <strong>Doğum Tarihi:</strong> 
                               @Convert.ToDateTime(item.Dateofbirth).ToShortDateString() </li> 

                                <li><i class="icofont-rounded-right"></i> <strong>Telefon:</strong> @item.Phone</li>

                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="icofont-rounded-right"></i> <strong>Yaş:</strong> @ViewBag.Age</li>

                                <li><i class="icofont-rounded-right"></i> <strong>Mail:</strong> @item.Mail</li>

                            </ul>
                        </div>
                    </div>
                    <p>
                        @item.Description2
                    </p>
                </div>
            }

        </div>

    </div><!-- End About Me -->
   
